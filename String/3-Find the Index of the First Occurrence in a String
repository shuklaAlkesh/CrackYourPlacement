class Solution {
public:
    int strStr(string haystack, string needle) {
        int n = haystack.length();
        int len = needle.size();

        if (len == 0) {
            return 0;
        }
        for(int i=0;i<n;i++){
            string str = haystack.substr(i,len);
            if(str == needle){
                return i;
            }
        } 
        return -1;
    }
};