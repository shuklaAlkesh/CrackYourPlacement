class Solution {
public:
    bool isValid(string s) {
        int n = s.length();

        stack<char> st;

        for(int i=0;i<n;i++){
            if(s[i] == '(' || s[i] == '{' || s[i] == '['){
                st.push(s[i]);
            }else{
                if(st.empty()){
                    return false;
                }
                char ch =  st.top();
                st.pop();

                if(s[i] == ')' && ch != '(' || s[i] == '}' && ch != '{' || s[i] == ']' && ch != '['){
                    return false;
                }
            }
        }
        // this is very important check whether the stack is empty or not 
        if(!st.empty()){
            return false;
        }
        return true;
    }
};